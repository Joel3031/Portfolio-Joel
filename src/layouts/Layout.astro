---
import "../styles/global.css";
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/Portfolio-Joel/favicon.png" />
        <meta name="generator" content={Astro.generator} />

        <title>{title}</title>
        <meta name="title" content={title} />
        <meta
            name="description"
            content="Joel Biju - Software Developer specializing in Java, Spring Boot, and React. Building scalable enterprise solutions and interactive web experiences."
        />

        <meta property="og:type" content="website" />
        <meta
            property="og:url"
            content="https://joel3031.github.io/Portfolio-Joel/"
        />
        <meta property="og:title" content="Joel Biju | Software Developer" />
        <meta
            property="og:description"
            content="Full Stack Developer specializing in Java Spring Boot and React. Check out my projects and technical experience."
        />
        <meta
            property="og:image"
            content="https://joel3031.github.io/Portfolio-Joel/og-image.png?v=2"
        />

        <meta property="twitter:card" content="summary_large_image" />
        <meta
            property="twitter:url"
            content="https://joel3031.github.io/Portfolio-Joel/"
        />
        <meta
            property="twitter:title"
            content="Joel Biju | Software Developer"
        />
        <meta
            property="twitter:description"
            content="Full Stack Developer specializing in Java Spring Boot and React. Check out my projects and technical experience."
        />
        <meta
            property="twitter:image"
            content="https://joel3031.github.io/Portfolio-Joel/og-image.png?v=2"
        />
    </head>
    <body
        class="bg-midnight antialiased overflow-x-hidden selection:bg-gold selection:text-black"
    >
        <slot />
    </body>
</html>
